<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<widget id="<%= widgetId %>" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name><%= appName %></name>
  <description>
    Ionic Generator by MINT-SOFT TEAM
  </description>
  <author email="<%= userEmail %>">
    <%= userName %>
  </author>
  <content src="index.html"/>
  <access origin="*"/>
  <preference name="webviewbounce" value="false"/>
  <preference name="UIWebViewBounce" value="false"/>
  <preference name="DisallowOverscroll" value="true"/>
  <preference name="BackupWebStorage" value="none"/>
  <feature name="StatusBar">
    <param name="ios-package" value="CDVStatusBar" onload="true"/>
  </feature>
  <preference name="CODE_SIGN_resources_RULES_PATH" value="$(SDKROOT)/resourcesRules.plist"/>

  <platform name="android">
    <icon src="resources/android/drawable-mdpi/appicon.png" density="mdpi"/>
    <icon src="resources/android/drawable-hdpi/appicon.png" density="hdpi"/>
    <icon src="resources/android/drawable-xhdpi/appicon.png" density="xhdpi"/>
    <icon src="resources/android/drawable-xxhdpi/appicon.png" density="xxhdpi"/>
    
    <splash src="resources/android/drawable-mdpi/background.9.png" density="mdpi"/>
    <splash src="resources/android/drawable-hdpi/background.9.png" density="hdpi"/>
    <splash src="resources/android/drawable-xhdpi/background.9.png" density="xhdpi"/>
    <splash src="resources/android/drawable-xxhdpi/background.9.png" density="xxhdpi"/>
  </platform>
  <platform name="ios">
    <icon src="resources/ios/appicon.png" width="57" height="57"/>
    <icon src="resources/ios/appicon@2x.png" width="114" height="114"/>
    <icon src="resources/ios/appicon-60.png" width="60" height="60"/>
    <icon src="resources/ios/appicon-60@2x.png" width="120" height="120"/>
    <icon src="resources/ios/appicon-60@3x.png" width="180" height="180"/>
    <icon src="resources/ios/appicon-72.png" width="72" height="72"/>
    <icon src="resources/ios/appicon-72@2x.png" width="144" height="144"/>
    <icon src="resources/ios/appicon-76.png" width="76" height="76"/>
    <icon src="resources/ios/appicon-76@2x.png" width="152" height="152"/>
    <icon src="resources/ios/appicon-Small.png" width="29" height="29"/>
    <icon src="resources/ios/appicon-Small@2x.png" width="58" height="58"/>
    <icon src="resources/ios/appicon-Small@3x.png" width="87" height="87"/>
    <icon src="resources/ios/appicon-Small-40.png" width="40" height="40"/>
    <icon src="resources/ios/appicon-Small-40@2x.png" width="80" height="80"/>
    <icon src="resources/ios/appicon-Small-50.png" width="50" height="50"/>
    <icon src="resources/ios/appicon-Small-50@2x.png" width="100" height="100"/>
    <splash src="resources/ios/Default.png" width="320" height="480"/>
    <splash src="resources/ios/Default@2x.png" width="640" height="960"/>
    <splash src="resources/ios/Default-Portrait.png" width="768" height="1024"/>
    <splash src="resources/ios/Default-Portrait@2x.png" width="1536" height="2048"/>
    <splash src="resources/ios/Default-Landscape.png" width="1024" height="768"/>
    <splash src="resources/ios/Default-Landscape@2x.png" width="2048" height="1536"/>
    <splash src="resources/ios/Default-Landscape-736h@3x.png" width="2208" height="1242"/>
    <splash src="resources/ios/Default-568h@2x.png" width="640" height="1136"/>
    <splash src="resources/ios/Default-667h@2x.png" width="750" height="1334"/>
  </platform>
  
</widget>
